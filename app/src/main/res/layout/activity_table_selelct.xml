<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:orientation="vertical"
    tools:context=".TableSelelctActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="140dp"
        android:layout_width="410dp">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:src="@drawable/two_seat"
        android:id="@+id/ts1"/>

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:src="@drawable/two_seat"
        android:id="@+id/ts2"/>

    <ImageView
        android:layout_height="match_parent" android:layout_width="100dp" android:src="@drawable/two_seat" android:id="@+id/ts3"/>

    <ImageView android:layout_height="match_parent" android:layout_width="100dp" android:src="@drawable/two_seat" android:id="@+id/ts4"/>

</LinearLayout>


    <LinearLayout android:layout_height="140dp" android:layout_width="410dp" android:layout_marginTop="10dp">

    <ImageView android:layout_height="match_parent" android:layout_width="200dp" android:src="@drawable/six_seat" android:id="@+id/ss1"/>

    <ImageView android:layout_height="match_parent" android:layout_width="200dp" android:src="@drawable/six_seat" android:id="@+id/ss2"/>

</LinearLayout>


    <LinearLayout android:layout_height="140dp" android:layout_width="410dp" android:layout_marginTop="10dp">

    <ImageView android:layout_height="match_parent" android:layout_width="200dp" android:src="@drawable/six_seat" android:id="@+id/ss3"/>

    <ImageView android:layout_height="match_parent" android:layout_width="200dp" android:src="@drawable/six_seat" android:id="@+id/ss4"/>

</LinearLayout>


    <LinearLayout android:layout_height="150dp" android:layout_width="380dp" android:layout_marginLeft="15dp">

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:src="@drawable/eight_seat" android:id="@+id/es1"/>

</LinearLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tablenext"
        android:textAlignment="textEnd"
        android:textFontWeight="@android:integer/config_shortAnimTime"
        android:background="@drawable/next_btn_style"
        android:textColor="#1338be"
        android:text="Next>>>"/>
</LinearLayout>