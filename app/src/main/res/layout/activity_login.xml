<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:orientation="vertical"
    android:gravity="center" tools:context=".LoginActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#3fff"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textlogo"
            android:text="Restro"
            android:gravity="center"
            android:textColor="#ffffff"/>

        <EditText
            android:layout_height="50dp"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:textColorHint="#FFFBF8"
            android:padding="2dp"
            android:hint="Enter Ph.No."
            android:background="@drawable/edittext_style"
            android:id="@+id/lgph"/>

        <EditText
            android:layout_height="50dp"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:textColorHint="#FFFBF8"
            android:padding="2dp"
            android:layout_marginTop="3dp"
            android:hint="Enter password"
            android:background="@drawable/edittext_style"
            android:id="@+id/lgpswd"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="250dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_style"
            android:textColor="#008081"
            android:id="@+id/btnlog"
            android:text="Login"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:id="@+id/newU"
            android:layout_marginTop="7dp"
            android:text="New User? Register"
            android:textColor="#FDF7F7"/>

    </LinearLayout>



</LinearLayout>