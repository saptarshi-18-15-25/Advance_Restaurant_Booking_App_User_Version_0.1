<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DateSelelctActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:id="@+id/tvDate"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textColor="#52b2bf"
        android:background="@drawable/show_date_text"/>


    <LinearLayout
        android:layout_height="400dp"
        android:layout_width="380dp">

    <CalendarView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/calender"/>

</LinearLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/datenext"
        android:textAlignment="textEnd"
        android:textFontWeight="@android:integer/config_shortAnimTime"
        android:background="@drawable/next_btn_style"
        android:textColor="#1338be"
        android:text="Next>>>"/>

</LinearLayout>